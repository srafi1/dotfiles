execute pathogen#infect()
filetype on
syntax on
colorscheme darcula
set t_ut= " fixes bg color
set number
"set colorcolumn=90
let mapleader=" "
map <Leader>s :source ~/.vimrc<CR> 
set hidden
set history=100
filetype indent on
set wrap
set tabstop=4
set shiftwidth=4
set expandtab
set smartindent
set autoindent
set hlsearch
nnoremap <silent> <Esc> :nohlsearch<Bar>:echo<CR>
set showmatch
nnoremap <Leader><Leader> :e#<CR>
let NERDTreeMapActivateNode='l'
let NERDTreeShowHidden=1
nmap <leader>g :NERDTreeToggle<CR>
autocmd VimEnter * silent! lcd %:p
autocmd VimEnter * NERDTree " open nerdtree upon entering vim
autocmd VimEnter * wincmd p " set focus to main pane
autocmd VimEnter * NERDTreeFind
let NERDTreeIgnore=['\.DS_Store', '\~$', '\.swp', '\.class$', '\.git$[[dir]]', '\.pyc$']
set laststatus=2 " for lightline to work with only one screen
nnoremap <leader>f :edit 
nnoremap <leader>l <C-w>l
nnoremap <leader>h <C-w>h
nnoremap <leader>j <C-w><C-w>
nnoremap <leader>k <C-w>W
nmap <d-l> <d-$>
nnoremap U :redo<CR>
tnoremap <Esc> <C-\><C-n>
set splitbelow
set splitright

