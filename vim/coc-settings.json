{
    "$schema": "http://json-schema.org/draft-07/schema",
    "description": "Configuration for coc.nvim",
    "explorer": {
        "icon.enableNerdfont": true,
        "previewAction.onHover": false
    },
    "languageserver": {
        "python": {
            "command": "python",
            "args": [
                "-mpyls"
            ],
            "filetypes": [
                "python"
            ]
        },
        "go": {
            "command": "gopls",
            "rootPatterns": ["go.mod"],
            "filetypes": [
                "go"
            ]
        },
        "clang": {
            "command": "ccls",
            "rootPatterns": [
                "Makefile",
                ".ccls",
                "compile_commands.json",
                ".git/"
            ],
            "filetypes": [
                "c",
                "cpp",
                "cc"
            ]
        },
        "latex": {
            "command": "texlab",
            "filetypes": [
                "tex"
            ]
        }
    }
}
